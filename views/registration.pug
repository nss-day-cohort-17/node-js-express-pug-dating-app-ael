extends partials/layout.pug

block content
		h1.text-center Create Profile
		if err
			h4= err
		form(method="POST")
			.form-group
				label(for="email") Email
				input.form-control(type="text" id="email" name="email" required)
			.form-group
				label(for="password") Password
				input.form-control(type="password" id="password" name="password" required)
			.form-group
				label(for="password_confirm") Confirm password
				input.form-control(type="password" id="password_confirm" name="password_confirm" required)

			.form-group
				label(for="first_name") First name
				input.form-control(type="text" id="first_name" name="first_name" required)
			.form-group
				label(for="last_name") Last name
				input.form-control(type="text" id="last_name" name="last_name" required)
			.form-group
				label(for="image") Image url
				input.form-control(type="text" id="image" name="image" required)
			.form-group
				label(for="city") City
				input.form-control(type="text" id="city" name="city" required)
			.form-group
				label(for="state") State
				input.form-control(type="text" id="state" name="state" required)

			//- These form elements are not required
			.form-group
				label(for="interests") Likes
				input.form-control(type="text" id="interests" name="interests")
			.form-group
				label(for="aversions") Dislikes
				input.form-control(type="text" id="aversions" name="aversions")
			.form-group
				label(for="bio") About me
				textarea.form-control(type="text" id="bio" name="bio" required)

			button(type="submit" class="btn btn-default") Register
		a(href="/login") Already have an account?

//- Form elements will be sent in req.body with variable names:
	email
	password
	password-confirm
	first_name
	last_name
	image
	city
	state
	interests
	aversions
	bio
